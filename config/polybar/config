[module/darkpolywins]
type = custom/script
exec = ~/.config/polybar/scripts/darkpolywins.sh 2>/dev/null
format = <label>
label = %output%
label-background = ${colors.background}
label-foreground= ${colors.foreground}
label-padding = 1
tail = true

